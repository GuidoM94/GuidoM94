# Imposta i worker process in base alla disponibilit√† di CPU
worker_processes auto;

# Event Module
events {
    worker_connections 1024;
}

http {
# Imposta i tipi di file supportati
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

# Imposta il timeout per le connessioni
    keepalive_timeout 65;

# Configurazione del server per il traffico HTTPS sulla porta 443
    server {
        listen 443 ssl http2;
        server_name localhost;

# Imposta i certificati SSL/TLS
        ssl_certificate /etc/nginx/server.crt;
        ssl_certificate_key /etc/nginx/server.key;
		
# Imposta la direttiva access_log all'interno del blocco server
		access_log /var/log/nginx/access.log;

# Imposta il protocollo TLSv1.3
        ssl_protocols TLSv1.3;

        location / {
# Inoltra la richiesta al container di WordPress sulla porta 9000
			proxy_pass http://wordpress:9000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
